<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.digitalculturalportal.dao.ProductsDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.example.digitalculturalportal.pojo.Products">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="category_id" property="categoryId" />
        <result column="topic_id" property="topicId" />
        <result column="brand_id" property="brandId" />
        <result column="price" property="price" />
        <result column="discount_price" property="discountPrice" />
        <result column="stock" property="stock" />
        <result column="status" property="status" />
        <result column="sku" property="sku" />
        <result column="weight" property="weight" />
        <result column="image_url" property="imageUrl" />
        <result column="sales_volume" property="salesVolume" />
        <result column="view_count" property="viewCount" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, description, category_id, topic_id, brand_id, price, discount_price, stock, status, sku, weight, image_url, sales_volume, view_count, created_at, updated_at, is_deleted
    </sql>

    <select id="selectAll" resultType="org.example.digitalculturalportal.pojo.Products">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            products

    </select>

    <select id="selectProductById" resultType="org.example.digitalculturalportal.pojo.Products">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            products
        WHERE
            id = #{productId}
    </select>

</mapper>
