<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.digitalculturalportal.dao.MallBrowseDao">
    <resultMap id="BaseResultMap" type="org.example.digitalculturalportal.pojo.Product">
        <id column="id" property="id"/>
        <result column="product_name" property="productName"/>
        <result column="product_price" property="productPrice"/>
        <result column="product_quantity" property="productQuantity"/>
    </resultMap>
    <sql id="ProductList">
        id,product_name,product_price,product_quantity
    </sql>
    <!--查找单个商品信息-->
    <select id="selectProductById" resultMap="BaseResultMap">
        SELECT
        <include refid="ProductList"/>
        FROM
        product
        WHERE id=#{id}
    </select>

    <!--查找批量商品信息-->
    <select id="selectProductList" resultMap="BaseResultMap">
        SELECT
        <include refid="ProductList"/>
        FROM
        product
    </select>
</mapper>