<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.server_forexam.dao.ProductsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.server_forexam.entity.Products">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="topic_id" property="topicId" />
        <result column="price" property="price" />
        <result column="discount_price" property="discountPrice" />
        <result column="stock" property="stock" />
        <result column="status" property="status" />
        <result column="image_url" property="imageUrl" />
        <result column="sales_volume" property="salesVolume" />
        <result column="view_count" property="viewCount" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, description, topic_id, price, discount_price, stock, status, image_url, sales_volume, view_count, created_at, updated_at, is_deleted
    </sql>

    <select id="selectAll" resultType="com.example.server_forexam.entity.Products">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
        products 
    </select>
    
    <update id="updateProducts" parameterType="com.example.server_forexam.entity.Products">
        UPDATE products
        SET
        name = #{name},
        price = #{price},
        stock = #{stock},
        discount_price = #{disprice},
        description = #{description}
        WHERE
        id = #{id}
    </update>

    <delete id="deleteOne">
        DELETE FROM
        products
        WHERE
        id = #{porId}
    </delete>

    <update id="updateStatus">
        UPDATE products
        SET status = 1 - status
        WHERE id = #{proId}
    </update>

    <insert id="insertOne" parameterType="com.example.server_forexam.entity.Products">
        INSERT INTO products (name, description, topic_id, price, discount_price, stock)
        VALUES (#{name}, #{description}, #{topicId}, #{price}, #{discountPrice}, #{stock})
    </insert>

</mapper>
