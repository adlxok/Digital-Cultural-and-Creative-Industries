<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.server_forexam.dao.OrdersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.server_forexam.entity.Orders">
        <id column="order_id" property="orderId" />
        <result column="user_id" property="userId" />
        <result column="product_name" property="productName" />
        <result column="status" property="status" />
        <result column="order_date" property="orderDate" />
        <result column="is_deleted" property="isDeleted" />
        <result column="recipient_name" property="recipientName" />
        <result column="recipient_phone" property="recipientPhone" />
        <result column="shipping_address" property="shippingAddress" />
        <result column="logistics_company" property="logisticsCompany" />
        <result column="total_amount" property="totalAmount" />
        <result column="order_sn" property="orderSn" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id, user_id, product_name, status, order_date, is_deleted, recipient_name, recipient_phone, shipping_address, logistics_company, total_amount, order_sn
    </sql>

    <select id="selectAllOrders" resultType="com.example.server_forexam.entity.Orders">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            orders
        WHERE
            is_deleted = 0
    </select>

    <delete id="deleteOrderById">
        DELETE FROM orders
        WHERE
            order_id = #{orderId}
    </delete>

    <update id="OrderDelivery" parameterType="com.example.server_forexam.entity.Orders">
        UPDATE orders
        SET
            status = 2,
            logistics_company = #{logisticsCompany},
            order_sn = #{orderSn}
        WHERE order_id = #{orderId}
    </update>

</mapper>
