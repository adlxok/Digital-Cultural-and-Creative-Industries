<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.server_forexam.dao.CommunityPostMapper">
    <resultMap id="BaseResultMap" type="com.example.server_forexam.entity.CommunityPost">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="type" property="type"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="comment_count" property="commentCount"/>
        <result column="score" property="score"/>
        <result column="content_html" property="contentHtml"/>

    </resultMap>

    <sql id="selectFields">
        id, user_id, title, content, type, status, create_time, comment_count, score,content_html
    </sql>

    <sql id="insertFields">
        user_id, title, content, type, status, create_time, comment_count, score,content_html
    </sql>
    <!--查询帖子个数-->
    <select id="selectCommunityPostRows" resultType="int">
        SELECT COUNT(id)
        FROM community_post
        WHERE status!=2
        <if test="userId!=0">
            AND user_id=#{userId}
        </if>
    </select>
<!--查询帖子信息-->
<select id="selectCommunityPosts" resultMap="BaseResultMap">
    SELECT <include refid="selectFields"></include>
    FROM community_post
    WHERE status!=2
    <if test="userId!=0">
        AND user_id = #{userId}
    </if>
    <if test="orderMode==0">
        ORDER BY create_time DESC
    </if>
    <if test="orderMode==1">
        ORDER BY score DESC,create_time DESC
    </if>
</select>
        <!--修改评论数量-->
<update id="updateCommentCount" parameterType="int">
UPDATE community_post
SET comment_count=#{commentCount}
WHERE id=#{id}
</update>
        <!--修改评论状态-->
<update id="updateCommentStatus" parameterType="int">
UPDATE community_post
SET status=#{status}
WHERE id=#{id}
</update>
        <!--修改帖子类型-->
<update id="updateType" parameterType="int">
UPDATE community_post
SET type=#{type}
WHERE id=#{id}
</update>
        <!--修改帖子分数-->
<update id="updateScore">
UPDATE  community_post
SET score=#{score}
WHERE id=#{id}
</update>
</mapper>